<h1>New Form</h1>
  <% if @pin.errors.any? %>
    <h2><%= @pin.errors.count %>Error exists:</h2>

     <ul>
       <% @pin.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </ul>
  <% end %>

<%= form_tag pins_path do %>
  <h2>Title</h2>
  <input type='text' name='pin[title]', @pin.title, class='form_control title-field'>
  <h2>Description</h2>
  <textarea name='pin[description]', @pin.description, class='form-control content-field'></textarea>
  <input type="submit" value="Create Pin" class="btn primary-btn">
<% end %>
